{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6", "dom", "esnext.asynciterable"],
		"allowJs": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
  "include": ["src"],
}
